<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JobPlanetTest" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DefaultTextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView" />


    <style name="Widget_filter_chip" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipBackgroundColor">@color/selector_green_white</item>
        <item name="chipCornerRadius">15dp</item>
        <item name="chipStrokeColor">@color/selector_gray03_null</item>
    </style>


    <style name="Widget_walfare_textview" parent="@style/Widget.AppCompat.TextView">
        <item name="android:background">@drawable/shape_rounded_gray03_r4</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">@color/gray_02</item>
    </style>


</resources>